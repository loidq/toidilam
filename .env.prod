NODE_ENV=development
PORT=3000
DATABASE_URL=postgresql://postgres:password@postgres:5432/toidilam?schema=public

# JWT configuration
JWT_VERIFY_USER_LINK_TOKEN_EXPIRED=10m

JWT_ACCESS_SECRET=your-access-secret
JWT_ACCESS_EXPIRED=7d

JWT_REFRESH_SECRET=your-refresh-secret
JWT_REFRESH_EXPIRED=5d

# Redis connection settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# Alternative: Use Redis URL instead of individual settings
# REDIS_URL=redis://username:password@localhost:6379/0

# For production, consider using Redis Cluster or Sentinel
# REDIS_CLUSTER_NODES=redis1:6379,redis2:6379,redis3:6379
# REDIS_SENTINEL_HOSTS=sentinel1:26379,sentinel2:26379
# REDIS_SENTINEL_NAME=mymaster
